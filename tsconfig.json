{
	"compileOnSave": true,
	"compilerOptions": {
    "jsx": "react",
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"declaration": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"incremental": true,
		"lib": [
			"esnext",
			"esnext.array",
			"esnext.asynciterable",
			"esnext.intl",
			"esnext.symbol"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		//"outDir": "./dist",
		"pretty": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"noImplicitAny": false,
		"target": "esnext",
		"types": ["node"]
	}
}
